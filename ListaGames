    <script>
        function selecttion(){
            let colors = document.getElementById("colors").value;
            let game = document.getElementById("game");
            
            //console.log(colors);
            
            if (colors == "red"){
                game.innerHTML = `<iframe src='https://www.minijogos.com.br/embed/super-bomberman-4' frameborder='0' allowfullscreen></iframe>`
            
            };
            if (colors == "gray"){
                game.innerHTML = "<iframe src='https://www.minijogos.com.br/embed/bomberman-fantasy-race' frameborder='0' allowfullscreen></iframe>"
            };
            /*
