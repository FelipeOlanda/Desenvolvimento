    <script>
        function selecttion(){
            let listaJogos = document.getElementById("listaJogos").value;
            let game = document.getElementById("games");
            if (listaJogos == "super bomberman 4"){
                game.innerHTML = '<iframe src="https://www.retrogames.cc/embed/19846-super-bomberman-4-english-translated.html" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "bomberman fantasy race"){
                game.innerHTML = '<iframe src="https://www.retrogames.cc/embed/40237-bomberman-fantasy-race.html" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "tomba 2"){
                game.innerHTML = '<iframe src="https://www.retrogames.cc/embed/41656-tomba-2.html" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "Looney Tunes Sheep Raider"){
                game.innerHTML = '<iframe src="https://www.retrogames.cc/embed/42549-looney-tunes-sheep-raider.html" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "Crash Bash"){
                game.innerHTML = '<iframe src="https://www.retrogames.cc/embed/40085-crash-bash.html" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "Crash Bandicoot 3 Warped"){
                game.innerHTML = '<iframe src="https://www.retrogames.cc/embed/40136-crash-bandicoot-warped.html" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "jogo7"){
                game.innerHTML = '<iframe src="" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            if (listaJogos == "jogo8"){
                game.innerHTML = '<iframe src="" frameborder="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true" scrolling="no"></iframe>'
            };
            
        };
    </script>
